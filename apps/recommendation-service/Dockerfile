# This recommendation is generated by Nx.
#
# Build the docker image with `npx nx docker-build recommendation-service`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t recommendation-service`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system recommendation-service && \
    adduser --system -G recommendation-service recommendation-service

COPY dist/apps/recommendation-service recommendation-service/
RUN chown -R recommendation-service:recommendation-service .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix recommendation-service --omit=dev -f install

CMD [ "node", "recommendation-service" ]
