# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build file-service`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t file-service`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system file-service && \
          adduser --system -G file-service file-service

COPY dist/apps/file-service file-service/
RUN chown -R file-service:file-service .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix file-service --omit=dev -f install

CMD [ "node", "file-service" ]
