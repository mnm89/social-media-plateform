# Run the container with `docker run -p 3000:3000 -t post-service`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system post-service && \
          adduser --system -G post-service post-service

COPY dist/apps/post-service post-service/
RUN chown -R post-service:post-service .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix post-service --omit=dev -f install

CMD [ "node", "post-service" ]
